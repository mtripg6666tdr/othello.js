{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES6",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "./dist/",
    "sourceMap": false,
    "declaration": true,
    "declarationDir": "./typings/",
    "noImplicitAny": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true
  },
  "include": [
    "./src/**/*.ts"
  ]
}